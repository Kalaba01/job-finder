<link rel="stylesheet" href="/styles/ticket-create.css" />
<div id="ticketCreatePopup" class="popup-overlay" style="display: none;">
  <div class="popup-content">
    <span id="closeTicketCreatePopup" class="close-popup">&times;</span>
    <h2><%= __("TicketCreate.title") %></h2>
    <form id="ticketCreateForm">
      <div class="form-group">
        <label for="ticketCreateTitle"><%= __("TicketCreate.titleLabel") %></label>
        <input
          type="text"
          id="ticketCreateTitle"
          name="title"
          placeholder="<%= __("TicketCreate.titlePlaceholder") %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="ticketCreateDescription"><%= __("TicketCreate.descriptionLabel") %></label>
        <textarea
          id="ticketCreateDescription"
          name="description"
          rows="4"
          placeholder="<%= __("TicketCreate.descriptionPlaceholder") %>"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <label for="ticketCreateCategory"><%= __("TicketCreate.categoryLabel") %></label>
        <select id="ticketCreateCategory" name="category" required>
          <option value="" disabled selected><%= __("TicketCreate.categoryPlaceholder") %></option>
          <option value="general"><%= __("TicketCreate.categories.general") %></option>
          <option value="technical"><%= __("TicketCreate.categories.technical") %></option>
          <option value="billing"><%= __("TicketCreate.categories.billing") %></option>
        </select>
      </div>
      <div class="form-group file-upload">
        <label for="ticketCreateAttachment" class="upload-ready">
          <%= __("TicketCreate.attachmentLabel") %>
        </label>
        <input
          type="file"
          id="ticketCreateAttachment"
          name="attachment"
          accept="image/*,application/pdf"
          onchange="handleFileUpload(this)"
        />
      </div>
      <button type="submit" class="submit-btn"><%= __("TicketCreate.submitButton") %></button>
    </form>
  </div>
</div>
