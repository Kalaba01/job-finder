<link rel="stylesheet" href="/styles/firm-register-popup.css" />
<link
  rel="stylesheet"
  href="/node_modules/nouislider/dist/nouislider.min.css"
/>
<script src="/node_modules/nouislider/dist/nouislider.min.js"></script>
<div class="firm-register-popup-overlay" id="firm-register-popup-overlay">
  <div class="firm-register-popup-content" id="firm-register-popup">
    <h2>Register Your Company</h2>
    <form id="firm-register-form">
      <label for="firm-register-email">Email</label>
      <input
        type="email"
        id="firm-register-email"
        name="email"
        required
        placeholder="Enter your email"
      />
      <label for="firm-register-name">Company Name</label>
      <input
        type="text"
        id="firm-register-name"
        name="name"
        required
        placeholder="Enter your company name"
      />
      <label for="firm-register-address">Address</label>
      <input
        type="text"
        id="firm-register-address"
        name="address"
        required
        placeholder="Enter your address"
      />
      <label for="firm-register-range">Number of Employees</label>
      <div id="employee-range-slider"></div>
      <p>
        Selected Range:
        <span id="firm-register-range-output">1 - 100</span>
      </p>

      <button type="submit">Submit Request</button>
    </form>
    <span class="firm-register-close-popup" id="firm-register-close-popup"
      >&times;</span
    >
  </div>
</div>
