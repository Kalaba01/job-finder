<!DOCTYPE html>
<html lang="<%= locale %>" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= __("TicketList.title") %></title>
    <link rel="stylesheet" href="/styles/ticket-list.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    <%- include('./partials/top-bar') %>

    <div class="ticket-container">
      <h1><%= __("TicketList.heading") %></h1>

      <div class="filters">
        <select id="statusFilter">
          <option value="all"><%= __("TicketList.filters.all") %></option>
          <option value="pending">
            <%= __("TicketList.filters.pending") %>
          </option>
          <option value="resolved">
            <%= __("TicketList.filters.resolved") %>
          </option>
        </select>
        <input type="text" id="searchInput" placeholder="<%=
        __("TicketList.filters.searchPlaceholder") %>" />
        <button id="searchButton">
          <%= __("TicketList.filters.searchButton") %>
        </button>
      </div>

      <div id="ticketList">
        <% tickets.forEach((ticket) => { %>
        <div class="ticket-item" data-id="<%= ticket.id %>">
          <h3><%= ticket.title %></h3>
          <p><%= ticket.description %></p>
          <p><%= __("TicketList.status") %>: <%= ticket.status %></p>
          <p>
            <%= __("TicketList.createdAt") %>: <%=
            ticket.createdAt.toLocaleString() %>
          </p>
        </div>
        <% }) %>
        <p id="noTicketsMessage"><%= __("TicketList.noTickets") %></p>
      </div>

      <button id="createTicketButton" class="create-ticket-btn">
        <%= __("TicketList.createTicket") %>
      </button>
    </div>

    <%- include('./partials/ticket-create') %>

    <script src="/js/ticket-list.js"></script>
  </body>
</html>
