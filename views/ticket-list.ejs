<!DOCTYPE html>
<html lang="<%= locale %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tickets</title>
    <link rel="stylesheet" href="/styles/ticket-list.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    <%- include('./partials/top-bar') %>

    <div class="ticket-container">
      <h1>Tickets</h1>

      <div class="filters">
        <select id="statusFilter">
          <option value="all">All</option>
          <option value="pending">Pending</option>
          <option value="resolved">Resolved</option>
        </select>
        <input type="text" id="searchInput" placeholder="Search by title..." />
        <button id="searchButton">Search</button>
      </div>

      <div id="ticketList">
        <% tickets.forEach(ticket => { %>
          <div class="ticket-item" data-id="<%= ticket.id %>">
            <h3><%= ticket.title %></h3>
            <p><%= ticket.description %></p>
            <p>Status: <%= ticket.status %></p>
            <p>Created At: <%= ticket.createdAt.toLocaleString() %></p>
          </div>
        <% }) %>
        <p id="noTicketsMessage" style="display: none; text-align: center; color: #777;">No tickets found.</p>
      </div>      
    </div>

    <script src="/js/ticket-list.js"></script>
  </body>
</html>
