<link rel="stylesheet" href="/styles/custom-question.css" />
<div id="custom-question-modal" class="modal">
  <div class="modal-content">
    <span class="close-btn" id="close-question-modal">&times;</span>
    <h1><%= __("CustomQuestion.title") %></h1>
    <form id="custom-question-form">
      <div class="form-group">
        <label for="question-text"><%= __("CustomQuestion.labels.question") %></label>
        <input
          type="text"
          id="question-text"
          placeholder="<%= __('CustomQuestion.placeholders.question') %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="question-type"><%= __("CustomQuestion.labels.type") %></label>
        <select id="question-type" required>
          <option value="text"><%= __("CustomQuestion.types.text") %></option>
          <option value="dropdown"><%= __("CustomQuestion.types.dropdown") %></option>
          <option value="radio"><%= __("CustomQuestion.types.radio") %></option>
          <option value="checkbox"><%= __("CustomQuestion.types.checkbox") %></option>
        </select>
      </div>
      <div class="form-group" id="options-container" style="display: none">
        <label for="question-options"><%= __("CustomQuestion.labels.options") %></label>
        <div id="options-list">
          <div class="option-input-container">
            <input
              type="text"
              id="option-input"
              placeholder="<%= __('CustomQuestion.placeholders.option') %>"
              class="option-input"
            />
          </div>
        </div>
        <button type="button" id="add-option-btn" class="add-option-btn">
          <%= __("CustomQuestion.buttons.addOption") %>
        </button>
      </div>
      <div class="form-group required-group">
        <label for="question-required">
          <%= __("CustomQuestion.labels.required") %>
          <input type="checkbox" id="question-required" /> 
        </label>
      </div>      
      <button type="button" id="save-question-btn" class="save-question-btn">
        <%= __("CustomQuestion.buttons.saveQuestion") %>
      </button>
    </form>
  </div>
</div>
