<link rel="stylesheet" href="/styles/firm-hiring-process-action.css">
<div id="action-popup" class="popup-container">
    <div class="popup-content">
        <h2 id="popup-title"></h2>
        <form id="action-form">
            <div id="comment-field">
                <label for="comment">Comment</label>
                <textarea id="comment" name="comment" rows="4" placeholder="Enter your comment here..." required></textarea>
            </div>
            <div id="date-field" style="display: none;">
                <label for="next-interview-date">Next Interview Date</label>
                <input type="date" id="next-interview-date" name="nextInterviewDate" />
            </div>
            <div id="note-field" style="display: none;">
                <label for="note">Note</label>
                <textarea id="note" name="note" rows="2" placeholder="Optional note for interview"></textarea>
            </div>
            <button type="submit" id="submit-action" class="btn-submit">Submit</button>
            <button type="button" id="close-popup" class="btn-cancel">Cancel</button>
        </form>
    </div>
</div>
