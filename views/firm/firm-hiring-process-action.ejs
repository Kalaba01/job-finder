<link rel="stylesheet" href="/styles/firm-hiring-process-action.css">
<div id="action-popup" class="popup-container">
    <div class="popup-content">
        <h2 id="popup-title"></h2>
        <form id="action-form">
            <div id="comment-field">
                <label for="comment"><%= __('FirmHiringProcessAction.commentLabel') %></label>
                <textarea id="comment" name="comment" rows="4" placeholder="<%= __('FirmHiringProcessAction.commentPlaceholder') %>" required></textarea>
            </div>
            <div id="date-field" style="display: none;">
                <label for="next-interview-date"><%= __('FirmHiringProcessAction.nextInterviewDateLabel') %></label>
                <input type="date" id="next-interview-date" name="nextInterviewDate" />
            </div>
            <div id="note-field" style="display: none;">
                <label for="note"><%= __('FirmHiringProcessAction.noteLabel') %></label>
                <textarea id="note" name="note" rows="2" placeholder="<%= __('FirmHiringProcessAction.notePlaceholder') %>"></textarea>
            </div>
            <button type="submit" id="submit-action" class="btn-submit"><%= __('FirmHiringProcessAction.submitButton') %></button>
            <button type="button" id="close-popup" class="btn-cancel"><%= __('FirmHiringProcessAction.cancelButton') %></button>
        </form>
    </div>
</div>
