<!DOCTYPE html>
<html lang="<%= locale %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= __("FirmProfile.title") %></title>
    <link rel="stylesheet" href="/styles/firm-profile.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    <%- include('../partials/top-bar') %>

    <div class="profile-container">
      <div class="profile-header">
        <div class="profile-image-container">
          <% if (firm.profile_picture_id) { %>
          <img
            src="/images/<%= firm.profile_picture_id %>"
            alt="<%= __('FirmProfile.profilePictureAlt') %>"
            class="profile-picture"
          />
          <% } else { %>
          <div class="profile-placeholder">
            <%= __("FirmProfile.noImage") %>
          </div>
          <% } %>
        </div>
        <h1><%= firm.name %></h1>
      </div>

      <div class="profile-details">
        <div class="profile-detail-item">
          <h3><%= __("FirmProfile.address") %></h3>
          <p><%= firm.address %></p>
        </div>
        <div class="profile-detail-item">
          <h3><%= __("FirmProfile.employees") %></h3>
          <p><%= firm.employees %></p>
        </div>
      </div>

      <button class="edit-profile-btn" id="openEditPopup">
        <%= __("FirmProfile.editProfile") %>
      </button>      
    </div>

    <%- include('./firm-profile-edit') %>
    <script src="/js/firm-profile.js"></script>

  </body>
</html>
