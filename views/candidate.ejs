<!DOCTYPE html>
<html lang="<%= locale %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Candidate Dashboard</title>
    <link rel="stylesheet" href="/styles/candidate.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    
    <%- include('partials/top-bar') %>

    <div class="dashboard-container">
      <header class="candidate-header">
        <h1>Find Your Next Opportunity</h1>
      </header>

      <div class="candidate-job-ads-header">
        <input
          type="text"
          id="search-bar"
          class="search-bar"
          placeholder="Search job ads"
        />
        <select id="category-filter" class="filter-dropdown">
          <option value="">All Categories</option>
          <% categories.forEach((category) => { %>
          <option value="<%= category %>"><%= category %></option>
          <% }) %>
        </select>
        <select id="location-filter" class="filter-dropdown">
          <option value="">All Locations</option>
          <% locations.forEach((location) => { %>
          <option value="<%= location %>"><%= location %></option>
          <% }) %>
        </select>
      </div>

      <div id="job-ads-list-container" class="job-ads-list">
        <div
          id="no-results-message"
          class="no-ads-message"
          style="display: none"
        >
          <p>No job ads match your criteria. Try adjusting your filters.</p>
        </div>
        <% if (jobAds.length === 0) { %>
        <% } else { %> <% jobAds.forEach((jobAd) => { %>
        <div class="job-card">
          <h2 class="job-title"><%= jobAd.title %></h2>
          <p class="job-description">
            <%= jobAd.description.substring(0, 150) %>...
          </p>
          <div class="job-meta">
            <p class="job-company">
              <strong>Company:</strong> <%= jobAd.Firm.name %>
            </p>
            <p class="job-location">
              <strong>Location:</strong> <%= jobAd.location || "N/A" %>
            </p>
            <p class="job-category">
              <strong>Category:</strong> <%= jobAd.category || "N/A" %>
            </p>
            <p class="job-created">
              <strong>Posted:</strong>
              <%= new Date(jobAd.createdAt).toLocaleDateString() %>
            </p>
          </div>
          <button class="view-job-btn">View Details</button>
        </div>
        <% }) %> <% } %>
      </div>
    </div>
    <script src="/js/candidate.js"></script>
  </body>
</html>
