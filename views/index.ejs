<!DOCTYPE html>
<html lang="<%= locale %>" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Finder</title>
    <link rel="stylesheet" href="/styles/index.css" />
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="icon" type="image/png" href="/images/logo.png" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital@1&family=Source+Code+Pro:ital,wght@0,900;1,900&display=swap" rel="stylesheet">
  </head>
  <body>
    <!-- Top Bar -->
    <div class="top-bar">
      <div class="logo">
        <img src="/images/logo.png" alt="Logo" />
        Job Finder
      </div>
      <div class="icons">
        <span class="icon" id="user-icon" title="<%= __("TopBar.userIcon") %>">
          <i class="fa-solid fa-user"></i>
        </span>
        <%- include('partials/theme') %>      
        <%- include('partials/language') %>             
      </div>
    </div>

    <!-- Login and Register Popups -->
    <%- include('partials/login-popup') %>
    <%- include('partials/candidate-register-popup') %>

    <!-- Hero Section -->
    <div class="hero">
      <img src="/images/background.jpg" alt="Hero Background" class="hero-image">
      <div class="hero-overlay">
        <h1>
          <span id="typing-text" data-typing-text="<%= __('HeroSection.title') %>"></span>
        </h1>
      </div>
    </div>    

    <!-- Content Section -->
    <div class="section">
      <img src="/images/sec1.jpg" alt="Image 1" />
      <div class="text">
        <h2><%= __("ContentSection.streamlineRecruitment.title") %></h2>
        <p>
          <%= __("ContentSection.streamlineRecruitment.text") %>
        </p>
      </div>
    </div>

    <div class="section">
      <div class="text">
        <h2><%= __("ContentSection.boostProductivity.title") %></h2>
        <p>
          <%= __("ContentSection.boostProductivity.text") %>
        </p>
      </div>
      <img src="/images/sec2.jpg" alt="Boost Productivity Tools" />
    </div>

    <div class="section-register-firm">
      <img src="/images/sec3.jpg" alt="Register Your Company" class="firm-image" />
      <div class="register-text">
        <h2><%= __("RegisterSection.title") %></h2>
        <p>
          <%= __("RegisterSection.text1") %>
        </p>
        <p>
          <%= __("RegisterSection.text2") %>
        </p>
        <button class="btn-register-firm"><%= __("RegisterSection.button") %></button>
      </div>
    </div>

    <%- include('partials/firm-register-popup') %>

    <!-- FAQ Section -->
    <div class="faq">
      <% const questions = __("FAQSection.questions"); %>
      <% questions.forEach(question => { %>
        <div class="faq-card">
          <div class="faq-header">
            <%= question.title %>
            <span class="arrow">â–¼</span>
          </div>
          <div class="faq-content">
            <%= question.content %>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>


    <%- include('partials/go-top') %>

    <script type="module" src="/js/login-popup.js"></script>
    <script type="module" src="/js/candidate-register-popup.js"></script>
    <script type="module" src="/js/firm-register-popup.js"></script>
    <script src="/js/typing.js"></script>
    <script src="/js/faq.js"></script>
  </body>
</html>
