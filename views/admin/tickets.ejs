<!DOCTYPE html>
<html lang="<%= locale %>" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= __("Tickets.title") %></title>
    <link rel="stylesheet" href="/styles/tickets.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body
    data-no-tickets-message="<%= __('Tickets.noTicketsFound') %>"
  >
    <%- include('../partials/top-bar') %>

    <div class="ticket-container">
      <h1><%= __("Tickets.manageHeading") %></h1>

      <div class="ticket-actions">
        <input
          type="text"
          id="searchInput"
          class="search-bar"
          placeholder="<%= __("Tickets.searchPlaceholder") %>"
        />
        <select id="statusFilter" class="filter-dropdown">
          <option value="all"><%= __("Tickets.filters.all") %></option>
          <option value="pending"><%= __("Tickets.filters.pending") %></option>
          <option value="resolved"><%= __("Tickets.filters.resolved") %></option>
        </select>
        <button id="filterButton" class="filter-btn"><%= __("Tickets.filterButton") %></button>
      </div>

      <div id="ticketList" class="ticket-list">
        <% tickets.forEach(ticket => { %>
        <div class="ticket-card" data-id="<%= ticket.id %>">
          <div class="ticket-header">
            <h3 class="ticket-title"><%= ticket.title %></h3>
            <p class="ticket-status <%= ticket.status %>">
              <%= __("Tickets.status." + ticket.status) %>
            </p>
          </div>
          <div class="ticket-body">
            <p class="ticket-description"><%= ticket.description %></p>
            <p class="ticket-category"><%= __("Tickets.categoryLabel") %>: <%= ticket.category %></p>
          </div>
          <div class="ticket-footer">
            <p class="ticket-date"><%= __("Tickets.createdLabel") %>: <%= ticket.createdAt.toLocaleString() %></p>
            <button class="view-btn"><%= __("Tickets.viewButton") %></button>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="/js/tickets.js"></script>
  </body>
</html>
