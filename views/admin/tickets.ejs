<!DOCTYPE html>
<html lang="<%= locale %>">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tickets</title>
    <link rel="stylesheet" href="/styles/tickets.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    <%- include('../partials/top-bar') %>

    <div class="ticket-container">
      <h1>Manage Tickets</h1>

      <div class="ticket-actions">
        <input
          type="text"
          id="searchInput"
          class="search-bar"
          placeholder="Search tickets by title..."
        />
        <select id="statusFilter" class="filter-dropdown">
          <option value="all">All</option>
          <option value="pending">Pending</option>
          <option value="resolved">Resolved</option>
        </select>
        <button id="filterButton" class="filter-btn">Filter</button>
      </div>

      <div id="ticketList" class="ticket-list">
        <% tickets.forEach(ticket => { %>
        <div class="ticket-card" data-id="<%= ticket.id %>">
          <div class="ticket-header">
            <h3 class="ticket-title"><%= ticket.title %></h3>
            <p class="ticket-status <%= ticket.status %>"><%= ticket.status %></p>
          </div>
          <div class="ticket-body">
            <p class="ticket-description"><%= ticket.description %></p>
            <p class="ticket-category">Category: <%= ticket.category %></p>
          </div>
          <div class="ticket-footer">
            <p class="ticket-date">Created: <%= ticket.createdAt.toLocaleString() %></p>
            <button class="view-btn">View</button>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script src="/js/tickets.js"></script>
  </body>
</html>
