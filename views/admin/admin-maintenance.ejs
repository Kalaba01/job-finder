<!DOCTYPE html>
<html lang="<%= locale %>" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Maintenance - Hiring Phases</title>
    <link rel="stylesheet" href="/styles/admin-maintenance.css" />
    <link rel="stylesheet" href="/node_modules/notyf/notyf.min.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body
    data-confirm-delete-title="<%= __('AdminMaintenance.deleteTitle') %>" 
    data-confirm-delete-message="<%= __('AdminMaintenance.deleteMessage') %>" 
    data-confirm-close-title="<%= __('AdminMaintenance.closeTitle') %>" 
    data-confirm-close-message="<%= __('AdminMaintenance.closeMessage') %>"
  >
    <%- include("../partials/top-bar") %>

    <div class="container">
      <div class="header">
        <h1><%= __('AdminMaintenance.heading') %></h1>
        <button id="add-phase-btn" class="primary-btn">+ <%= __('AdminMaintenance.addPhase') %></button>
      </div>
      <div class="table-container">
        <% if (hiringPhases.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>ID</th>
                <th><%= __('AdminMaintenance.phaseName') %></th>
                <th><%= __('AdminMaintenance.sequence') %></th>
                <th><%= __('AdminMaintenance.isFinal') %></th>
                <th><%= __('AdminMaintenance.actions') %></th>
              </tr>
            </thead>
            <tbody>
              <% hiringPhases.forEach((phase) => { %>
              <tr data-id="<%= phase.id %>">
                <td><%= phase.id %></td>
                <td><%= phase.name %></td>
                <td><%= phase.sequence %></td>
                <td><%= phase.is_final ? __('AdminMaintenance.yes') : __('AdminMaintenance.no') %></td>
                <td class="actions">
                  <button class="edit-btn"><%= __('AdminMaintenance.edit') %></button>
                  <button class="delete-btn"><%= __('AdminMaintenance.delete') %></button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="no-data-message"><%= __('AdminMaintenance.noPhases') %></p>
        <% } %>
      </div>
    </div>

    <%- include("./admin-maintenance-popup") %>
    <%- include("../partials/confirm") %>
    
    <script src="/notyf/notyf.min.js"></script>
    <script src="/js/admin-maintenance.js"></script>
  </body>
</html>
