<link rel="stylesheet" href="/styles/admin-maintenance-popup.css" />
<div id="phase-modal" class="modal">
  <div class="modal-content">
    <span class="close-modal">&times;</span>
    <h2 id="modal-title">Add New Phase</h2>
    <form id="phase-form">
      <div class="form-group">
        <label for="phase-name">Phase Name:</label>
        <input
          type="text"
          id="phase-name"
          name="name"
          placeholder="Enter phase name"
          required
        />
      </div>

      <div class="form-group">
        <label for="phase-sequence">Sequence:</label>
        <input
          type="number"
          id="phase-sequence"
          name="sequence"
          placeholder="Enter phase sequence"
          required
        />
      </div>

      <div class="form-group">
        <label for="phase-final">Is Final Phase:</label>
        <select id="phase-final" name="isFinal">
          <option value="false">No</option>
          <option value="true">Yes</option>
        </select>
      </div>

      <input type="hidden" id="phase-id" name="id" />
      <button type="submit" class="primary-btn save-btn">Save</button>
    </form>
  </div>
</div>
