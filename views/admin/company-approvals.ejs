<!DOCTYPE html>
<html lang="<%= locale %>" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= __('CompanyApprovals.title') %></title>
    <link rel="stylesheet" href="/styles/company-approvals.css" />
    <link rel="icon" type="image/png" href="/images/logo.png" />
  </head>
  <body>
    <%- include('../partials/top-bar') %>

    <div class="container">
      <header class="page-header">
        <h1><%= __('CompanyApprovals.header') %></h1>
        <div class="filters">
          <!-- Search Input -->
          <input
            type="text"
            id="search-input"
            placeholder="<%= __('CompanyApprovals.searchPlaceholder') %>"
            aria-label="<%= __('CompanyApprovals.searchPlaceholder') %>"
          />

          <!-- Dropdown Filter -->
          <select id="status-filter" aria-label="<%= __('CompanyApprovals.filterLabel') %>">
            <option value="all"><%= __('CompanyApprovals.filterAll') %></option>
            <option value="pending"><%= __('CompanyApprovals.filterPending') %></option>
            <option value="approved"><%= __('CompanyApprovals.filterApproved') %></option>
            <option value="rejected"><%= __('CompanyApprovals.filterRejected') %></option>
          </select>
        </div>
      </header>

      <div class="request-grid">
        <% firmRequests.forEach(request => { %>
        <div class="card" data-status="<%= request.status %>">
          <div class="card-header">
            <span class="badge <%= request.status %>">
              <%= __('CompanyApprovals.status.' + request.status) %>
            </span>
            <h3><%= request.name %></h3>
          </div>
          <div class="card-body">
            <p><strong><%= __('CompanyApprovals.email') %>:</strong> <%= request.email %></p>
            <p><strong><%= __('CompanyApprovals.address') %>:</strong> <%= request.address %></p>
            <p><strong><%= __('CompanyApprovals.employees') %>:</strong> <%= request.employees_range %></p>
            <p>
              <strong><%= __('CompanyApprovals.createdAt') %>:</strong> <%= request.createdAt.toDateString() %>
            </p>
          </div>
          <div class="card-footer">
            <% if (request.status === 'pending') { %>
              <button class="btn approve-btn" data-id="<%= request.id %>">
                ✔ <%= __('CompanyApprovals.approve') %>
              </button>
              <button class="btn reject-btn" data-id="<%= request.id %>">
                ✘ <%= __('CompanyApprovals.reject') %>
              </button>
            <% } else { %>
              <span class="status-info">
                <%= __('CompanyApprovals.already') %> <%= __('CompanyApprovals.status.' + request.status) %>.
              </span>
            <% } %>
          </div>          
        </div>
        <% }) %>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="/js/company-approvals.js"></script>
  </body>
</html>
