<link rel="stylesheet" href="/styles/candidate-profile-edit.css" />
<div id="edit-profile-popup" class="edit-profile-popup-overlay">
  <div class="edit-profile-popup-content">
    <span id="edit-profile-close-btn" class="edit-profile-close-popup">&times;</span>
    <h2><%= __("CandidateProfileEdit.title") %></h2>
    <form id="edit-profile-form">
      <div class="form-row">
        <div class="form-group">
          <label for="edit-first-name"><%= __("CandidateProfileEdit.firstName") %></label>
          <input type="text" id="edit-first-name" name="first_name" value="<%= candidate.first_name %>" required />
        </div>
        <div class="form-group">
          <label for="edit-last-name"><%= __("CandidateProfileEdit.lastName") %></label>
          <input type="text" id="edit-last-name" name="last_name" value="<%= candidate.last_name %>" required />
        </div>
      </div>

      <div class="form-group">
        <label for="edit-about"><%= __("CandidateProfileEdit.about") %></label>
        <textarea id="edit-about" name="about" rows="5" required><%= candidate.about %></textarea>
      </div>

      <div class="form-group file-upload">
        <label for="edit-profile-picture" class="upload-ready">
          <%= __("CandidateProfileEdit.uploadProfilePicture") %>
        </label>
        <input type="file" id="edit-profile-picture" name="profilePicture" accept="image/*" onchange="handleFileUpload(this)" />
      </div>
      
      <div class="form-group file-upload">
        <label for="edit-cv" class="upload-ready">
          <%= __("CandidateProfileEdit.uploadCV") %>
        </label>
        <input type="file" id="edit-cv" name="cv" accept=".pdf,.doc,.docx" onchange="handleFileUpload(this)" />
      </div>
      
      <div class="form-group file-upload">
        <label for="edit-motivation-letter" class="upload-ready">
          <%= __("CandidateProfileEdit.uploadMotivationLetter") %>
        </label>
        <input type="file" id="edit-motivation-letter" name="motivation_letter" accept=".pdf,.doc,.docx" onchange="handleFileUpload(this)" />
      </div>
      
      <div class="form-group file-upload">
        <label for="edit-recommendations" class="upload-ready">
          <%= __("CandidateProfileEdit.uploadRecommendations") %>
        </label>
        <input type="file" id="edit-recommendations" name="recommendations" accept=".pdf,.doc,.docx" onchange="handleFileUpload(this)" />
      </div>      

      <button type="submit" id="save-profile-btn" class="save-profile-btn">
        <%= __("CandidateProfileEdit.saveChanges") %>
      </button>
    </form>
  </div>
</div>
<script src="/js/candidate-profile.js"></script>
